<!DOCTYPE kpartgui SYSTEM "kpartgui.dtd">
<kpartgui name="keditbookmarks" version="5">

<MenuBar>

<Menu name="file" noMerge="1"><text>&amp;File</text>
 <Action name="importNS"/>
 <Action name="importMoz"/>
 <Action name="exportNS"/>
 <Action name="exportMoz"/>
 <Separator/><!-- Creation -->
 <Action name="newbookmark"/>
 <Action name="newfolder"/>
 <Action name="insertseparator"/>
 <Separator/>
 <Action name="file_save"/>
 <Action name="file_quit"/>
</Menu>

<Menu name="edit"><text>&amp;Edit</text>
 <!-- The undo/redo/cut/copy/paste stuff goes here (ui_standards.rc) -->
 <Action name="rename"/>
 <Action name="changeurl"/>
 <Action name="changeicon"/>
 <Action name="delete"/>
 <Separator/><!-- Stuff for folders -->
 <Action name="sort"/>
 <Action name="setastoolbar"/>
</Menu>

<Menu name="bookmark"><text>&amp;Bookmark</text>
 <Action name="openlink"/>
 <!--<Action name="testlink"/> not implemented -->
</Menu>

<Menu name="settings"><text>&amp;Settings</text>
 <Action name="settings_showNS"/>
</Menu>

</MenuBar>

<ToolBar name="mainToolBar" noMerge="1" fullWidth="true"><text>Main Toolbar</text>
 <Action name="file_save"/>
 <Action name="edit_undo"/>
 <Action name="edit_redo"/>
 <Action name="delete"/>
 <Action name="newbookmark"/>
 <Action name="newfolder"/>
</ToolBar>

<Menu name="popup_folder">
             <!-- Edition -->
 <Action name="edit_undo"/>
 <Action name="edit_redo"/>
 <Action name="edit_cut"/>
 <Action name="edit_copy"/>
 <Action name="edit_paste"/>
 <Separator/>
 <Action name="rename"/>
 <Action name="changeurl"/>
 <Action name="changeicon"/>
 <Action name="delete"/>
 <Separator/><!-- Creation -->
 <Action name="newbookmark"/>
 <Action name="newfolder"/>
 <Action name="insertseparator"/>
 <Separator/><!-- Stuff for folders -->
 <Action name="sort"/>
 <Action name="setastoolbar"/>
</Menu>

<Menu name="popup_bookmark">
 <!-- Stuff for bookmarks -->
 <Action name="openlink"/>
 <!--<Action name="testlink"/>-->
 <Separator/><!-- Edition -->
 <Action name="edit_undo"/>
 <Action name="edit_redo"/>
 <Action name="edit_cut"/>
 <Action name="edit_copy"/>
 <Action name="edit_paste"/>
 <Separator/>
 <Action name="rename"/>
 <Action name="changeurl"/>
 <Action name="changeicon"/>
 <Separator/><!-- Creation -->
 <Action name="newbookmark"/>
 <Action name="newfolder"/>
 <Action name="insertseparator"/>
 <Separator/><!-- Dangerous actions :/ -->
 <Action name="delete"/>
</Menu>

</kpartgui>
